---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import AppCard from '../components/AppCard.astro';

const apps = await getCollection('apps');
const featuredApps = apps.slice(0, 4); // Show only first 4 apps on homepage
---

<BaseLayout 
  title="FusionCore Apps â€” Premium Mobile Applications" 
  description="Professional mobile app development studio delivering secure, innovative, and user-friendly applications for Android and iOS platforms. Transform your ideas into powerful digital experiences."
  showHero={true}
>
  <!-- Hero Section -->
  <div slot="hero">
    <div class="text-center space-y-8 hero-fade-in">
      <!-- Main headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
        Premium Mobile Apps
        <span class="block gradient-text">Built with Excellence</span>
      </h1>
      
      <!-- Subtitle -->
      <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
        We create secure, innovative, and user-friendly mobile applications that transform your ideas into powerful digital experiences.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4">
        <a href="/apps" class="button button--primary group">
          <span>Explore Our Apps</span>
          <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        
        <a href="/contact" class="button button--secondary">
          Get In Touch
        </a>
      </div>
      
      <!-- Stats or badges -->
      <div class="flex flex-wrap items-center justify-center gap-8 pt-8 text-sm text-gray-600 dark:text-gray-400">
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
          <span>Active Development</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>Secure & Reliable</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span>Premium Quality</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Apps Section -->
  <section class="featured-apps">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Featured Applications
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Discover our carefully crafted mobile applications, each designed with attention to detail and user experience in mind.
      </p>
    </div>
    
    {featuredApps.length > 0 ? (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {featuredApps.map((app, index) => (
          <div class="animate-slide-up" style={`animation-delay: ${index * 100}ms`}>
            <AppCard app={app} featured={true} />
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <div class="w-24 h-24 bg-gray-100 dark:bg-gray-800 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Apps Coming Soon</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">We're working hard to bring you amazing mobile applications.</p>
        <a href="/admin" class="button button--primary">
          Publish Your First App
        </a>
      </div>
    )}
    
    {featuredApps.length > 0 && (
      <div class="text-center mt-12">
        <a href="/apps" class="button button--secondary">
          View All Apps
          <span class="ml-2">({apps.length})</span>
        </a>
      </div>
    )}
  </section>

  <!-- Features Section -->
  <section class="features py-24 gradient-bg">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Why Choose FusionCore Apps?
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          We combine cutting-edge technology with user-centered design to deliver exceptional mobile experiences.
        </p>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Security First -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Security First</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Built with industry-leading security practices to protect user data and ensure privacy compliance.
          </p>
        </div>
        
        <!-- User Experience -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">User Experience</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Intuitive interfaces designed with users in mind, ensuring smooth and enjoyable interactions.
          </p>
        </div>
        
        <!-- Performance -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">High Performance</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Optimized for speed and efficiency, delivering fast load times and smooth animations.
          </p>
        </div>
        
        <!-- Cross Platform -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Cross Platform</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Compatible across Android and iOS platforms, reaching the widest possible audience.
          </p>
        </div>
        
        <!-- Regular Updates -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-500 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Regular Updates</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Continuous improvement with regular updates, new features, and bug fixes.
          </p>
        </div>
        
        <!-- Support -->
        <div class="card card--elevated p-8 text-center group hover:scale-105 transition-transform duration-300">
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-xl transition-shadow">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Dedicated Support</h3>
          <p class="text-gray-600 dark:text-gray-400">
            Responsive customer support to help you get the most out of our applications.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta py-24">
    <div class="container">
      <div class="card card--elevated p-12 text-center bg-gradient-to-br from-brand-500 to-brand-600 text-white border-0">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4">
          Ready to Experience Premium Apps?
        </h2>
        <p class="text-xl text-brand-100 mb-8 max-w-2xl mx-auto">
          Join thousands of users who trust FusionCore Apps for their mobile experience.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/apps" class="button bg-white text-brand-600 hover:bg-gray-100 border-0 shadow-lg hover:shadow-xl">
            Browse All Apps
          </a>
          <a href="/contact" class="button button--ghost text-white border-white hover:bg-white/10">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
